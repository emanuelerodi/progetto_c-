<Window x:Class="PaginaIniziale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaginaIniziale"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>

        <!-- SFONDO -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2196F3" Offset="0"/>
                <GradientStop Color="#BBDEFB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>


        <!-- TITOLO -->
        <Label Content="GameMix"
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               FontSize="36" 
               FontWeight="Bold">
            <Label.Effect>
                <DropShadowEffect Color="Black" 
                                  BlurRadius="8" 
                                  ShadowDepth="0" 
                                  Opacity="0.4"/>
            </Label.Effect>
        </Label>

        <!-- LABEL GIOCHI -->
        <Label Content="MEMORY"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="44,72,0,0"
               FontSize="16"
               FontWeight="Bold"
               FontFamily="Segoe UI"/>

        <Label Content="INDOVINA IL NUMERO"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="589,72,0,0"
               FontSize="16"
               FontWeight="Bold"
               FontFamily="Segoe UI"/>

        <Label Content="COLPISCI LA TALPA"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,72,0,0"
               FontSize="16"
               FontWeight="Bold"
               FontFamily="Segoe UI"/>

        <Label Content="IMPICCATO"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="196,232,0,0"
               FontSize="16"
               FontWeight="Bold"
               FontFamily="Segoe UI"/>

        <Label Content="TRIS"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="536,232,0,0"
               FontSize="16"
               FontWeight="Bold"
               FontFamily="Segoe UI"/>

        <!-- IMMAGINI -->
        <Image Source="/memory.jpg.webp"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="36,108,0,0"
               Width="100"
               Height="100"/>

        <Image Source="/impiccato.jpg.png"
               HorizontalAlignment="Left"
               Margin="192,268,0,0"
               Width="100" Height="100" VerticalAlignment="Top"/>

        <Image Source="/gioco_talpa.jpg.jpg"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,108,0,0"
               Width="148"
               Height="95"/>

        <Image Source="/tris.jpg.jpg"
               HorizontalAlignment="Left"
               Margin="508,268,0,0"
               Width="100" Height="100" VerticalAlignment="Top"/>

        <Image Source="/indovina_numero.jpg.png"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="631,108,0,0"
               Width="100"
               Height="100"/>

        <!-- BOTTONI -->
        <Button x:Name="btnMemory"
                Content="GIOCA"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="47,216,0,0"
                Width="78"
                Height="28"
                Click="Memory_Click"/>

        <Button x:Name="btnNumero"
                Content="GIOCA"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="642,213,0,0"
                Width="78"
                Height="28"/>

        <Button x:Name="btnTris"
                Content="GIOCA"
                HorizontalAlignment="Left"
                Margin="519,377,0,0"
                Width="78" Height="28" VerticalAlignment="Top"/>

        <Button x:Name="btnTalpa"
                Content="GIOCA"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,207,0,0"
                Width="78"
                Height="28"/>

        <Button x:Name="btnImpiccato"
                Content="GIOCA"
                HorizontalAlignment="Left"
                Margin="203,377,0,0"
                Width="78" Height="28" VerticalAlignment="Top"/>

    </Grid>
</Window>
