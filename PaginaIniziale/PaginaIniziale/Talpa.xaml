<Window x:Class="PaginaIniziale.Talpa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Colpisci la Talpa" Height="500" Width="450">

    <Grid Background="#F0F0F0" Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <TextBlock Text="COLPISCI LA TALPA"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Tempo e punteggio -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">

            <TextBlock Text="Tempo: " FontSize="20"/>
            <TextBlock x:Name="txtTempo"
                       Text="30s"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="5,0,20,0"/>

            <TextBlock Text="Punti: " FontSize="20"/>
            <TextBlock x:Name="txtPunti"
                       Text="0"
                       FontSize="20"
                       FontWeight="Bold"/>
        </StackPanel>

        <!-- Griglia 3x3 -->
        <UniformGrid x:Name="GrigliaTalpe"
                     Grid.Row="2"
                     Rows="3"
                     Columns="3"
                     Margin="0,10,0,10"/>

        <!-- Pulsante Start -->
        <Button Content="INIZIA"
                Grid.Row="3"
                Width="150"
                Height="40"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Click="Start_Click"/>
    </Grid>
</Window>
