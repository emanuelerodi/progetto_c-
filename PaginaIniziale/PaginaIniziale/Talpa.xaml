<Window x:Class="PaginaIniziale.Talpa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Colpisci la Talpa" Height="520" Width="480"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Stile pulsanti moderni -->
        <Style x:Key="PulsanteModerno" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#285C8E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <!-- Sfondo -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E1E2F" Offset="0"/>
                <GradientStop Color="#2A2A4A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titolo -->
            <RowDefinition Height="Auto"/>
            <!-- Info -->
            <RowDefinition Height="*"/>
            <!-- Griglia -->
            <RowDefinition Height="Auto"/>
            <!-- Pulsanti -->
            <RowDefinition Height="Auto"/>
            <!-- Pausa -->
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <TextBlock Text="COLPISCI LA TALPA"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"
                   Grid.Row="0">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="5"
                                  ShadowDepth="2"
                                  Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Info -->
        <Border Grid.Row="1"
                Background="#1AFFFFFF"
                CornerRadius="12"
                Padding="10"
                Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Text="Tempo: " FontSize="18" Foreground="White"/>
                <TextBlock x:Name="txtTempo" Text="30s" FontSize="18" FontWeight="Bold" Foreground="White" Margin="5,0,20,0"/>
                <TextBlock Text="Punti: " FontSize="18" Foreground="White"/>
                <TextBlock x:Name="txtPunti" Text="0" FontSize="18" FontWeight="Bold" Foreground="White" Margin="5,0,20,0"/>
                <TextBlock Text="Record: " FontSize="18" Foreground="White"/>
                <TextBlock x:Name="txtRecord" Text="-" FontSize="18" FontWeight="Bold" Foreground="White" Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Griglia -->
        <Border Grid.Row="2"
                Background="#22000000"
                CornerRadius="16"
                Padding="10"
                Margin="0,5,0,10">
            <UniformGrid x:Name="GrigliaTalpe"
                         Rows="3"
                         Columns="3"
                         Margin="0,5,0,5"/>
        </Border>

        <!-- Pulsanti principali -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="HOME"
                    Style="{StaticResource PulsanteModerno}"
                    Width="100"
                    Height="40"
                    Click="Home_Click"
                    Grid.Column="0"
                    HorizontalAlignment="Left"/>

            <Button Content="INIZIA"
                    Style="{StaticResource PulsanteModerno}"
                    Width="140"
                    Height="40"
                    Click="Start_Click"
                    Grid.Column="1"
                    HorizontalAlignment="Center"/>

            <Button Content="RICOMINCIA"
                    Style="{StaticResource PulsanteModerno}"
                    Width="120"
                    Height="40"
                    Click="Ricomincia_Click"
                    Grid.Column="2"
                    HorizontalAlignment="Right"/>
        </Grid>

        <!-- Pulsante PAUSA -->
        <Button Content="PAUSA"
                Style="{StaticResource PulsanteModerno}"
                Width="110"
                Height="40"
                Click="Button_Click"
                Grid.Row="4"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"/>
    </Grid>
</Window>
