<Window x:Class="PaginaIniziale.Memory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <!-- SFONDO GRADIENTE -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F2027" Offset="0"/>
                <GradientStop Color="#203A43" Offset="0.5"/>
                <GradientStop Color="#2C5364" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- TITOLO -->
        <TextBlock Text="MEMORY"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"/>

        <!-- GRIGLIA CARTE -->
        <Border CornerRadius="20"
                Background="#1AFFFFFF"
                Padding="20"
                Margin="40,90,260,40">
            <UniformGrid x:Name="CardGrid" Rows="4" Columns="4"/>
        </Border>

        <!-- PANNELLO LATERALE -->
        <StackPanel Margin="0,90,40,40"
                    HorizontalAlignment="Right"
                    Width="200"
                    VerticalAlignment="Top">

            <!-- STILE PULSANTI MODERNI -->
            <StackPanel.Resources>
                <Style x:Key="RoundedButtonStyle" TargetType="Button">
                    <Setter Property="Height" Value="45"/>
                    <Setter Property="Background" Value="#FF1E88E5"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Margin" Value="0,6,0,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="10,0"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>

            <TextBlock x:Name="lblBest"
                       Text="Record: -"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="lblTimer"
                       Text="Tempo: 0 s"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <Button Content="START"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="start_Click"/>

            <Button Content="RICOMINCIA"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="Ricomincia_Click"/>

            <Button Content="PAUSA"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="btnStop_Click"/>

            <Button Content="HOME"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="Home_Click"/>

        </StackPanel>

    </Grid>
</Window>
