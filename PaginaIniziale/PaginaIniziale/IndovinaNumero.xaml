<Window x:Class="PaginaIniziale.IndovinaNumero"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IndovinaNumero" Height="480" Width="680"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="PulsanteModerno" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <!-- Sfondo nuovo -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1F3B" Offset="0"/>
                <GradientStop Color="#2D2A4A" Offset="0.5"/>
                <GradientStop Color="#3E2F5B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titolo -->
            <RowDefinition Height="Auto"/>
            <!-- Istruzioni -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
            <RowDefinition Height="Auto"/>
            <!-- Messaggi -->
            <RowDefinition Height="Auto"/>
            <!-- Tentativi -->
            <RowDefinition Height="Auto"/>
            <!-- Pulsanti -->
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <TextBlock Text="INDOVINA IL NUMERO"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="5"
                                  ShadowDepth="2"
                                  Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Istruzioni -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Ho pensato ad un numero tra 1 e 100"
                       FontSize="18"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Prova ad indovinare!"
                       FontSize="18"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Input + Conferma -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <TextBox x:Name="InputNumero"
                     Width="140"
                     Height="36"
                     FontSize="16"
                     Margin="0,0,10,0"/>
            <Button x:Name="BtnConferma"
                    Content="CONFERMA"
                    Style="{StaticResource PulsanteModerno}"
                    Width="140"
                    Height="40"
                    Click="BtnConferma_Click"/>
        </StackPanel>

        <!-- Messaggi -->
        <TextBlock x:Name="TxtMessaggi"
                   Grid.Row="3"
                   FontSize="18"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"
                   TextWrapping="Wrap"
                   Width="300"
                   Text=""/>

        <!-- Tentativi -->
        <TextBlock x:Name="lblTentativi"
                   Grid.Row="4"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"
                   Text="Tentativi: 0"/>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="HOME"
                    Style="{StaticResource PulsanteModerno}"
                    Width="110"
                    Height="40"
                    Click="Button_Click"/>
            <Button x:Name="BtnRicomincia"
                    Content="RICOMINCIA"
                    Style="{StaticResource PulsanteModerno}"
                    Width="140"
                    Height="40"
                    Click="BtnRicomincia_Click"/>
        </StackPanel>
    </Grid>
</Window>
