<Window x:Class="PaginaIniziale.Impiccato"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Impiccato" Height="450" Width="800">

    <Grid Margin="20">

        <!-- Pulsante Home -->
        <Button Content="HOME"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="120" Height="45"
                Click="Home_Click"/>

        <!-- Pulsante Ricomincia -->
        <Button Content="RICOMINCIA"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="120" Height="45"
                Click="Ricomincia_Click"/>

        <!-- Immagine dell'impiccato -->
        <Image x:Name="imgImpiccato"
               Width="42"
               Height="57"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="39,171,0,0"
               Source="Immagini_impiccato/stato0.png"/>

        <!-- Parola da indovinare -->
        <TextBlock x:Name="txtParola"
                   FontSize="36"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,80,0,0"/>

        <!-- Lettere sbagliate -->
        <TextBlock x:Name="txtSbagli"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,140,0,0"
                   Text="Sbagliate: "/>

        <!-- Griglia lettere A-Z -->
        <UniformGrid x:Name="GrigliaLettere"
                     Rows="3"
                     Columns="9"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Bottom"
                     Margin="0,0,0,20"/>
    </Grid>
</Window>
