<Window x:Class="PaginaIniziale.Impiccato"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Impiccato" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E1E2F" Offset="0"/>
            <GradientStop Color="#2A2A4A" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="PulsanteModerno" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6AB0FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3A78C2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">

        <!-- Pulsanti in alto -->
        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" LastChildFill="False">
            <Button Content="HOME"
                    Style="{StaticResource PulsanteModerno}"
                    Width="120" Height="45"
                    Click="Home_Click"
                    DockPanel.Dock="Left"/>
            <Button Content="RICOMINCIA"
                    Style="{StaticResource PulsanteModerno}"
                    Width="120" Height="45"
                    Click="Ricomincia_Click"
                    DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Titolo -->
        <TextBlock Text="IMPICCATO"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,60,0,0">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="5"
                                  ShadowDepth="2"
                                  Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Immagine -->
        <Image x:Name="imgImpiccato"
               Width="120"
               Height="120"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="60,150,0,0"
               Source="Immagini_impiccato/stato0.png"/>

        <!-- Parola -->
        <TextBlock x:Name="txtParola"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,130,0,0"/>

        <!-- Lettere sbagliate -->
        <TextBlock x:Name="txtSbagli"
                   FontSize="20"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,180,0,0"
                   Text="Sbagliate: "/>

        <!-- Griglia lettere -->
        <Border Background="#1AFFFFFF"
                CornerRadius="12"
                Padding="10"
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
            <UniformGrid x:Name="GrigliaLettere"
                         Rows="3"
                         Columns="9"/>
        </Border>

    </Grid>
</Window>
