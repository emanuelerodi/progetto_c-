<Window x:Class="PaginaIniziale.Impiccato"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Impiccato" Height="450" Width="800">

    <Window.Resources>

        <!-- Stile moderno per i pulsanti -->
        <Style x:Key="PulsanteModerno" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6AB0FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3A78C2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="20">

        <!-- Pulsante Home -->
        <Button Content="HOME"
                Style="{StaticResource PulsanteModerno}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="120" Height="45"
                Click="Home_Click"/>

        <!-- Pulsante Ricomincia -->
        <Button Content="RICOMINCIA"
                Style="{StaticResource PulsanteModerno}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="120" Height="45"
                Click="Ricomincia_Click"/>

        <!-- Titolo del gioco -->
        <TextBlock Text="IMPICCATO"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,50,0,0">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4"
                                  ShadowDepth="2"
                                  Opacity="0.4"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Immagine dell'impiccato -->
        <Image x:Name="imgImpiccato"
               Width="116"
               Height="101"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="60,153,0,0"
               Source="Immagini_impiccato/stato0.png"/>

        <!-- Parola da indovinare -->
        <TextBlock x:Name="txtParola"
                   FontSize="36"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,120,0,0"/>

        <!-- Lettere sbagliate -->
        <TextBlock x:Name="txtSbagli"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,170,0,0"
                   Text="Sbagliate: "/>

        <!-- Griglia lettere A-Z -->
        <UniformGrid x:Name="GrigliaLettere"
                     Rows="3"
                     Columns="9"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Bottom"
                     Margin="0,0,0,20"/>
    </Grid>
</Window>
