<Window x:Class="PaginaIniziale.Tris"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tris" Height="500" Width="450"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Stile pulsanti moderni -->
        <Style x:Key="PulsanteTris" TargetType="Button">
            <Setter Property="Background" Value="#3BA7C9"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E8EAD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#226C84"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <!-- Sfondo nuovo (non usato negli altri) -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F2E8FF" Offset="0"/>
                <GradientStop Color="#D7C4FF" Offset="0.5"/>
                <GradientStop Color="#B89BFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titolo -->
            <RowDefinition Height="*"/>
            <!-- Griglia -->
            <RowDefinition Height="Auto"/>
            <!-- Pulsanti -->
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <TextBlock Text="TRIS"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="6"
                                  ShadowDepth="2"
                                  Opacity="0.6"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Griglia 3x3 incorniciata -->
        <Border Grid.Row="1"
                Background="#20FFFFFF"
                CornerRadius="16"
                Padding="10"
                Margin="0,10,0,10">
            <UniformGrid x:Name="GrigliaTris"
                         Rows="3"
                         Columns="3"
                         Margin="0,5,0,5"/>
        </Border>

        <!-- Barra pulsanti (stessa disposizione) -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- HOME -->
            <Button Content="HOME"
                    Style="{StaticResource PulsanteTris}"
                    Width="90"
                    Height="40"
                    HorizontalAlignment="Left"
                    Click="Home_Click"
                    Grid.Column="0"
                    Margin="0,20,0,0"/>

            <!-- INIZIA -->
            <Button Content="INIZIA"
                    Style="{StaticResource PulsanteTris}"
                    Width="150"
                    Height="40"
                    HorizontalAlignment="Center"
                    Click="Inizia_Click"
                    Grid.Column="1"
                    Margin="0,0,0,10"/>

            <!-- RICOMINCIA -->
            <Button Content="RICOMINCIA"
                    Style="{StaticResource PulsanteTris}"
                    Width="110"
                    Height="40"
                    HorizontalAlignment="Right"
                    Click="Ricomincia_Click"
                    Grid.Column="2"
                    Margin="0,20,0,0"/>
        </Grid>
    </Grid>
</Window>
